<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:divider="@drawable/linear_separator"
        android:showDividers="middle"
        android:dividerPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="30sp"
                android:text="@string/TV_add_info_head_login" />

            <CheckedTextView
                android:id="@+id/TV_add_info_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TV_add_info_change_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryPurple"
                android:text="@string/add_info_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="30sp"
                android:text="@string/TV_add_info_head_email" />

            <CheckedTextView
                android:id="@+id/TV_add_info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TV_add_info_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryPurple"
                android:text="@string/add_info_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="30sp"
                android:text="@string/TV_add_info_head_name" />

            <CheckedTextView
                android:id="@+id/TV_add_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TV_add_info_change_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryPurple"
                android:text="@string/add_info_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="30sp"
                android:text="@string/TV_add_info_head_description" />

            <CheckedTextView
                android:id="@+id/TV_add_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TV_add_info_change_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryPurple"
                android:text="@string/add_info_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="30sp"
                android:text="@string/TV_add_info_head_privacy" />

            <CheckBox
                android:id="@+id/CB_add_info_privacy_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20sp"
                android:checked="true"
                android:text="@string/CB_add_info_privacy_login"/>

            <CheckBox
                android:id="@+id/CB_add_info_privacy_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20sp"
                android:checked="false"
                android:text="@string/CB_add_info_privacy_email"/>

            <CheckBox
                android:id="@+id/CB_add_info_privacy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20sp"
                android:checked="false"
                android:text="@string/CB_add_info_privacy_name"/>

            <CheckBox
                android:id="@+id/CB_add_info_privacy_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20sp"
                android:checked="true"
                android:text="@string/CB_add_info_privacy_description"/>

            <CheckBox
                android:id="@+id/CB_add_info_privacy_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20sp"
                android:checked="true"
                android:text="@string/CB_add_info_privacy_progress"/>

            <TextView
                android:id="@+id/TV_add_info_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans_light"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryPurple"
                android:text="@string/add_info_change_pwd" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>