<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IV_return_to_article_list"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_return_in_registration" />

            <TextView
                android:id="@+id/TV_article_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp"
                android:textSize="30sp"
                android:fontFamily="@font/open_sans_light"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_article_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/open_sans_light"
                />

            <Button
                android:id="@+id/BTN_article_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/style_reg_btn_action"
                android:textSize="30sp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/BTN_reg" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>